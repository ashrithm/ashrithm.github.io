---
type Props = {
  tag: string;
  tagName: string;
  size?: "sm" | "lg";
};

const { tag, tagName, size = "lg" } = Astro.props;
---

<li>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class:list={[
      "inline-block rounded bg-muted/20 text-muted hover:text-foreground transition-colors",
      { "px-2 py-0.5 text-sm": size === "sm" },
      { "px-3 py-1 text-base": size === "lg" },
    ]}
  >
    {tagName}
  </a>
</li>
